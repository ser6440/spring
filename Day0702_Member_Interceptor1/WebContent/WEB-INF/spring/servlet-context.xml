<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<context:component-scan base-package="controller"></context:component-scan>
	
	<!-- mvc에서만 사용하는 몇가지 객체에 대해서 사용함을 선언 -->
	<mvc:annotation-driven></mvc:annotation-driven>
	
	<!-- viewResolver는 기본으로 존재하지만, 
	설정값을 주려면 bean으로 등록해야 한다.  -->
	<!-- test     jsp/test.jsp -->
	<bean id = "viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/jsp/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>
	<!-- interceptor는 특정 요청을 가로채는 역할이기 때문에
	     해당 요청을 처리하는 servlet 설정에 포함되면 된다. 
	 -->
	<!-- 인터셉터가 가로챌 요청을 명시: interceptors 태스 사용  -->
	<mvc:interceptors>
		<mvc:interceptor>
			<!-- 가로챌 요청 -->
<!-- 			<mvc:mapping path="/member/*"/> -->
			<mvc:mapping path="/member/main"/>
			<mvc:mapping path="/member/memberList"/>
			<mvc:mapping path="/member/update"/>
			<mvc:mapping path="/member/updateForm"/>
			<mvc:mapping path="/member/logout"/>
			<!-- 동작할 인터셉터 -->
			<ref bean="loginCheckIntercepter"/>
		</mvc:interceptor>
	</mvc:interceptors>
	 
</beans>
